# Auto-detect text files and perform LF normalization.
* text=auto

# Explicitly declare code files as CRLF.
*.c eol=crlf
*.cpp eol=crlf
*.cmd eol=crlf
*.h eol=crlf
*.hlsl eol=crlf
*.hlsli eol=crlf
*.fx eol=crlf
*.fxh eol=crlf
*.inc eol=crlf
*.inl eol=crlf
*.vcxproj eol=crlf
*.filters eol=crlf
*.sln eol=crlf
*.ps1 eol=crlf
*.sh eol=lf
*.yml eol=crlf
*.md eol=crlf

# Explicitly declare resource files as binary.
*.pdb binary
*.obj binary